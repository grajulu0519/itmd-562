extends layout.pug

block content
  h1.mt-5 Books
    a.btn.btn-primary(href='./books/new' style='margin-left: 25px') New
  table.table.table-hover
    thead
      tr
        th(scope='col') Title
        th(scope='col') Author
    tbody
      each book in books
        tr
          td
            a(href='/books/' + book.id)= book.title
          td= book.author